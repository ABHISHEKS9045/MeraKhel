<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_trades_status"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:orientation="horizontal"
    android:background="@color/Skyblue"
    >

    <RelativeLayout
        android:id="@+id/rel_player_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/_4sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cricket" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/grey"
            android:gravity="center"
            android:padding="3dp"
            android:text="AU-W"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_toRightOf="@+id/rel_player_image"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="3dp"
                android:text="Virat Kohli"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/player_selection_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:padding="3dp"
                android:text="Selected by 81.96%"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <LinearLayout
                android:id="@+id/linear_announced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/anounced_indicator_circle"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/circle_green"
                    android:backgroundTint="@color/reddark" />

                <TextView
                    android:id="@+id/anounced_indicator_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Announced"
                    android:textColor="@color/reddark"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="3"
            android:textColor="@color/white" />

    </LinearLayout>








    <LinearLayout
        android:id="@+id/linear_selection_"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/fantasy_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:padding="3dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@color/text"
            android:layout_marginRight="6dp"
            android:padding="2dp"
            android:src="@drawable/ic_add"
            android:backgroundTint="@color/reddark"
            android:background="@drawable/circle_green"
            app:tint="@color/white" />

    </LinearLayout>



</RelativeLayout>
