<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/matches_view_top_margin"
    android:layout_marginRight="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tournament_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_medium"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Cricket League T10"
                android:textColor="@color/black"
                android:textSize="@dimen/small_info_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/bg_text_new">

                <ImageView
                    android:id="@+id/teama_logo"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/flag_indian"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <TextView
                android:id="@+id/upcoming_opponent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:text="AAD"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/upcoming_match_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="LINE UP"
                android:textColor="@color/green"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/upcoming_match_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1D:24H:30M:40S"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/match_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gradient_new"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:minWidth="@dimen/_60sdp"
                android:text="7:30PM"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/bg_text_new">

                <ImageView
                    android:id="@+id/teamb_logo"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/flag_newzeland"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <TextView
                android:id="@+id/upcoming_opponent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:singleLine="true"
                android:text="NZ"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/opp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/upcoming_linear_contest_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/matches_view_left_margin_inner"
        android:layout_marginTop="@dimen/matches_gap_between_each_views"
        android:layout_marginRight="@dimen/matches_view_right_margin_inner"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/upcoming_contest_name"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:padding="3dip"
            android:text="Mega"
            android:textColor="@color/white"
            android:textSize="@dimen/small_info_size" />

        <TextView
            android:id="@+id/upcoming_contest_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:fontFamily="@font/montserrat_bold"
            android:text="â‚¹1Crore"
            android:textColor="@color/black"
            android:textSize="@dimen/small_info_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/free_view"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/green_light"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:padding="3dip"
        android:src="@drawable/left_triangle"
        android:text="FREE"
        android:textColor="@color/white"
        android:textSize="@dimen/small_info_size" />

</androidx.cardview.widget.CardView>